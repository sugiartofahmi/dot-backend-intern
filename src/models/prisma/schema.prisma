generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id         String   @id @default(uuid())
  email      String   @unique
  fullname   String
  password   String
  created_at DateTime @default(now())
  books      Books[]
}

model Books {
  id         String   @id @default(uuid())
  title      String
  created_at DateTime @default(now())
  author     Users    @relation(fields: [author_id], references: [id])
  author_id  String
}
